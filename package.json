{
  "name": "gage-trade",
  "version": "0.1.5",
  "description": "",
  "main": "electron/dist/index.js",
  "scripts": {
    "web:build": "pnpm --filter web build",
    "web:dev": "pnpm --filter web dev",
    "web:lint": "pnpm --filter web lint",
    "web:fix": "pnpm --filter web fix",
    "electron:test": "pnpm --filter electron test",
    "electron:build": "pnpm --filter electron build",
    "electron:dev": "pnpm --filter electron dev",
    "electron:lint": "pnpm --filter electron lint",
    "electron:fix": "pnpm --filter electron fix",
    "lint": "pnpm web:lint && pnpm electron:lint",
    "fix": "pnpm web:fix && pnpm electron:fix",
    "release": "electron-builder",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "eclipseop",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eclipseop/gage-trade.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "husky": "^9.1.7",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.yourapp.id",
    "productName": "Gage Trade",
    "files": [
      "electron/dist/**/*",
      "web/dist/**/*"
    ],
    "win": {
      "publish": [
        {
          "provider": "github",
          "owner": "Eclipseop",
          "repo": "gage-trade"
        }
      ],
      "target": [
        "NSIS"
      ]
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron-updater": "^6.3.9",
    "uiohook-napi": "^1.5.4"
  }
}
